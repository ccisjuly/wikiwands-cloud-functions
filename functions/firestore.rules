rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function owner(uid) { return request.auth != null && request.auth.uid == uid; }

    match /users/{uid} {
      allow read: if owner(uid);
      allow write: if false;
    }

    match /entitlements/{uid} {
      allow read: if owner(uid);
      allow write: if false; // Only Functions/Admin SDK can write
    }

    match /payments/rc/{eventId} {
      allow read: if request.auth != null && resource.data.uid == request.auth.uid;
      allow write: if false;
    }

    match /credits/{uid} {
      allow read: if owner(uid);
      allow write: if false; // Only Functions/Admin SDK can write
    }

    // 视频任务：只有创建者可以读写
    match /video_tasks/{taskId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.uid == request.auth.uid);
      allow write: if false; // Only Functions/Admin SDK can write
    }

    // 用户图片：只有用户自己可以读写
    match /user_images/{imageId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.uid == request.auth.uid);
      allow write: if false; // Only Functions/Admin SDK can write
    }

    // 商品：只有创建者可以读写
    match /products/{productId} {
      allow read: if request.auth != null && 
        (resource == null || resource.data.uid == request.auth.uid);
      allow write: if false; // Only Functions/Admin SDK can write
    }
  }
}